<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SCREEN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/chordList"
    android:padding="20dp">

    <ImageView
        style="@style/LOGO"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/chords" />

    <TextView
        style="@style/TEXT_MAIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chords"
        android:textSize="40sp" />

    <TextView
        style="@style/TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chord_categories"
        android:textSize="18sp" />

    <!-- Placeholder for dynamically added chord buttons -->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/chordButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
    </LinearLayout>
</LinearLayout>
