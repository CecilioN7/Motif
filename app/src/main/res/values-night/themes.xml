<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Motif" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
<!--        &lt;!&ndash; Customize your dark theme here. &ndash;&gt;-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/desert_storm</item>
        <!--dark mode-->
        </style>
        <style name = "LOGO">
            <item name="android:src">@drawable/motif_logo</item>
        </style>

        <style name="LOGOI">
            <item name="android:src">@drawable/motif_logo_dark</item>
        </style>

        <style name = "SCREEN">
            <item name="android:background">@color/cape_cod</item>
        </style>

        <style name="SCREENI">
            <item name="android:background">@color/desert_storm</item>
        </style>

        <style name="TEXT_MAIN">
            <item name="fontFamily">@font/bebas_neue</item>
            <item name="android:textColor">@color/desert_storm</item>
        </style>

        <style name="TEXT_MAINI">
            <item name="fontFamily">@font/bebas_neue</item>
            <item name="android:textColor">@color/cape_cod</item>
        </style>

        <style name="TEXT">
            <item name="fontFamily">@font/antic</item>
            <item name="android:textColor">@color/desert_storm</item>
        </style>

        <style name="TEXTI">
            <item name="fontFamily">@font/antic</item>
            <item name="android:textColor">@color/cape_cod</item>
        </style>

        <style name="BUTTON">
            <item name="android:textColor">@color/cape_cod</item>
            <item name="android:background">@color/desert_storm</item>
        </style>

        <style name="BUTTON2">
            <item name="android:textColor">@color/desert_storm</item>
            <item name="android:background">@color/cape_cod</item>
        </style>
</resources>