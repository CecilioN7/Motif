<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Motif" parent="Theme.MaterialComponents.DayNight.NoActionBar">
<!--        &lt;!&ndash; Customize your light theme here. &ndash;&gt;-->
        <item name="colorPrimary">@color/cape_cod</item>
<!--         Secondary brand color. -->
<!--        <item name="colorSecondary">@color/sorrell_brown</item>-->
        <!-- Accent colors. -->
<!--        <item name="colorAccent">@color/beaver</item>-->

<!--        <item name="android:windowContentTransitions">true</item>-->
        <item name="buttonStyle">@style/DefaultButton</item>
        <item name="android:statusBarColor">@color/desert_storm</item>
        <item name="android:navigationBarColor">@color/desert_storm</item>
    </style>

    <style name="DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/cape_cod</item>
        <item name="android:textColor">@color/desert_storm</item>
    </style>

    <style name = "SHARE">
        <item name="android:src">@drawable/baseline_add_link_24</item>
    </style>

    <style name="LOGO">
        <item name="android:src">@drawable/motif_logo_dark</item>
    </style>

    <style name="LOGOI">
        <item name="android:src">@drawable/motif_logo</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">@color/desert_storm</item>
    </style>

    <style name = "SCREENI">
        <item name="titleTextColor">@color/desert_storm</item>
        <item name="android:background">@color/cape_cod</item>
    </style>

    <style name="TEXT_MAIN">
        <item name="fontFamily">@font/bebas_neue</item>
        <item name="android:textColor">@color/cape_cod</item>
    </style>

    <style name="TEXT_MAINI">
        <item name="fontFamily">@font/bebas_neue</item>
        <item name="android:textColor">@color/desert_storm</item>
    </style>

    <style name="TEXT">
        <item name="fontFamily">@font/antic</item>
        <item name="android:textColor">@color/cape_cod</item>
    </style>

    <style name="TEXTI">
        <item name="fontFamily">@font/antic</item>
        <item name="android:textColor">@color/desert_storm</item>
    </style>

    <style name="BUTTON">
        <item name="android:background">@color/cape_cod</item>
        <item name="android:textColor">@color/desert_storm</item>
    </style>
    <style name="BUTTON2">
        <item name="android:textColor">@color/cape_cod</item>
        <item name="android:background">@color/desert_storm</item>
    </style>
</resources>